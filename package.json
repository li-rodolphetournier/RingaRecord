{
  "name": "ringarecord",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint:check": "eslint . --max-warnings 0 || (echo 'Lint failed' && exit 1)",
    "build:vercel": "npm run lint:check && npm run test:run && npm run build",
    "deploy:check": "npm run build:vercel",
    "deploy:check:win": "powershell -ExecutionPolicy Bypass -File ./scripts/vercel-build-check.ps1",
    "deploy:check:unix": "bash ./scripts/vercel-build-check.sh",
    "prebuild": "npm run lint",
    "cap:add:android": "npx cap add android",
    "cap:add:ios": "npx cap add ios",
    "cap:sync": "npx cap sync",
    "cap:open:android": "npx cap open android",
    "cap:open:ios": "npx cap open ios",
    "cap:build": "npm run build && npx cap sync",
    "android:dev": "npm run build && npx cap sync && npx cap open android",
    "android:build": "npm run build && npx cap sync && cd android && ./gradlew assembleRelease",
    "android:build:release": "powershell -ExecutionPolicy Bypass -File ./scripts/android-build-release.ps1",
    "android:build:release:unix": "bash ./scripts/android-build-release.sh",
    "android:build:aab": "npm run build && npx cap sync && cd android && ./gradlew bundleRelease",
    "android:build:apk": "powershell -ExecutionPolicy Bypass -File ./scripts/android-build-apk.ps1",
    "android:build:apk:unix": "bash ./scripts/android-build-apk.sh",
    "android:generate-keystore": "powershell -ExecutionPolicy Bypass -File ./scripts/android-generate-keystore.ps1",
    "android:test": "powershell -ExecutionPolicy Bypass -File ./scripts/android-test.ps1",
    "android:test:unix": "bash ./scripts/android-test.sh",
    "android:build:debug": "cd android && ./gradlew assembleDebug",
    "android:install": "adb install -r android/app/build/outputs/apk/debug/app-debug.apk",
    "android:run": "adb shell am start -n com.ringarecord.app/.MainActivity",
    "android:log": "adb logcat | grep -i ringarecord",
    "ios:dev": "npm run build && npx cap sync && npx cap open ios",
    "ios:build": "npm run build && npx cap sync && cd ios && xcodebuild -workspace App.xcworkspace -scheme App -configuration Release archive",
    "ios:build:release": "bash ./scripts/ios-build-release.sh",
    "ios:test": "bash ./scripts/ios-test.sh",
    "ios:pod:install": "cd ios/App && pod install",
    "ios:pod:update": "cd ios/App && pod update"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.0",
    "@capacitor/cli": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/filesystem": "^7.1.5",
    "@capacitor/ios": "^7.4.4",
    "@capacitor/share": "^7.0.2",
    "@capacitor/splash-screen": "^7.0.3",
    "@capacitor/status-bar": "^7.0.3",
    "@supabase/supabase-js": "^2.86.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.25",
    "lamejs": "^1.2.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "react-toastify": "^10.0.5",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.22",
    "babel-plugin-react-compiler": "^1.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "vitest": "^2.1.9"
  }
}
