// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String    // ou null si OAuth
  createdAt DateTime  @default(now())
  ringtones Ringtone[]
}

model Ringtone {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  title      String
  format     String
  duration   Int
  sizeBytes  Int
  fileUrl    String
  waveform   Json?
  syncedAt   DateTime?
  createdAt  DateTime @default(now())
}
